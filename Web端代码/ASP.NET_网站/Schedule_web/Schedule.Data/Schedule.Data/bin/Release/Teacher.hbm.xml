<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
	<class name="Schedule.Data.Teacher,Schedule.Data" table="Teacher" lazy="false">

		<id name="TeacherNo" column="TeacherNo" type="String">
			<generator class="assigned"/>
		</id>
		<property column="Name" type="String" name="Name" length="200" />
		<property column="pwd" type="String" name="Pwd" length="200" />
		<property column="phone" type="String" name="Phone" length="200" />
		<property column="email" type="String" name="Email" length="200" />
		<property column="address" type="String" name="Address" length="200" />
		
	</class>
</hibernate-mapping>

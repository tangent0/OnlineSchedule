<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content">
        <RelativeLayout
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:gravity="center">
            <EditText android:id="@+id/login_name_edit"
                      android:layout_height="wrap_content" android:layout_width="200dp"

                      android:layout_alignParentRight="false"
                      android:layout_centerHorizontal="true"/>
            <TextView android:id="@+id/login_name_text"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:text="用户名"
                      android:layout_alignParentLeft="true"
                      android:layout_alignLeft="@+id/login_name_edit"
                      android:layout_marginTop="10dp"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">
            <EditText android:id="@+id/login_pwd_edit"
                	  android:inputType="textPassword"
                      android:layout_height="wrap_content" android:layout_width="200dp"

                      android:layout_alignParentRight="false"
                      android:layout_centerHorizontal="true"/>
            <TextView android:id="@+id/login_pwd_text"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:text="密  码"
                      android:layout_alignParentLeft="true"
                      android:layout_alignLeft="@+id/login_pwd_edit"
                      android:layout_marginTop="10dp"/>
        </RelativeLayout>
        <LinearLayout android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">
            <Button android:id="@+id/login_ok_btn"
                      android:layout_height="wrap_content" android:layout_width="80dp"
                      android:text="登录"
                      android:layout_marginRight="4dp"/>
            <Button android:id="@+id/login_cancel_btn"
                      android:layout_height="wrap_content"
                      android:layout_width="80dp"
                      android:text="取消"
                      android:layout_alignLeft="@+id/login_ok_btn"
                      android:layout_marginLeft="4dp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>